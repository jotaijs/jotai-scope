{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "jotai-scope": ["./src"]
    },
    "types": ["vite/client", "node"]
  },
  "include": ["src", "tests"],
  "exclude": ["dist", "jotai"]
}
